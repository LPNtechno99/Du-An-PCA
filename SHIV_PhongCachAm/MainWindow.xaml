        <Style x:Key="myDanhgia" TargetType="{x:Type Label}">
            <Setter Property="Template" Value="{StaticResource lblMainTemplate}"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=Value}" Value="0">
                    <Setter Property="Template" Value="{StaticResource lblMainTemplate}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=Value}" Value="5">
                    <Setter Property="Template" Value="{StaticResource lblDanhgiaOK}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=Value}" Value="15">
                    <Setter Property="Template" Value="{StaticResource lblDanhgiaNG}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="myValueOKNG" TargetType="{x:Type Label}">
            <Setter Property="Template" Value="{StaticResource lblMainTemplate}"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=Color}" Value="0">
                    <Setter Property="Template" Value="{StaticResource lblMainTemplate}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=Color}" Value="1">
                    <Setter Property="Template" Value="{StaticResource lblMainTemplate_TRUE}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=Color}" Value="2">
                    <Setter Property="Template" Value="{StaticResource lblMainTemplate_FAIL}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="myDisplayDataFB" TargetType="{x:Type Label}">
            <Setter Property="Template" Value="{StaticResource lblMainTemplate}"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=giatriDanhgia.Value}" Value="0">
                    <Setter Property="Template" Value="{StaticResource lblMainTemplate}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=giatriDanhgia.Value}" Value="1">
                    <Setter Property="Template" Value="{StaticResource lblMainTemplate}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=giatriDanhgia.Value}" Value="2">
                    <Setter Property="Template" Value="{StaticResource lblMainTemplate_FAIL}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="myOKLamp" TargetType="{x:Type Label}">
            <Setter Property="Template" Value="{StaticResource lblMainTemplate}"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=Value}" Value="0">
                    <Setter Property="Template" Value="{StaticResource lblMainTemplate}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=Value}" Value="1">
                    <Setter Property="Template" Value="{StaticResource lblOK}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=Value}" Value="2">
                    <Setter Property="Template" Value="{StaticResource lblNG}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="myNGLamp" TargetType="{x:Type Label}">
            <Setter Property="Template" Value="{StaticResource lblMainTemplate}"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=Value}" Value="0">
                    <Setter Property="Template" Value="{StaticResource lblMainTemplate}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=Value}" Value="1">
                    <Setter Property="Template" Value="{StaticResource lblMainTemplate}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=Value}" Value="2">
                    <Setter Property="Template" Value="{StaticResource lblNG}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

